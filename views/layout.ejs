<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <%- style %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <!-- noty is used for showing notification in beautified manner -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://kit.fontawesome.com/701e2416eb.js" crossorigin="anonymous"></script>
    <script src="/js/layout.js"></script>
    <title>Nodejs Authentication</title>
</head>

<body>
    <%- include("_header") %>
    <canvas id="canvas">
        
    </canvas>
        <%-body%>
    <%- script %>
</body>
<script>
    // Show notification

    <%if (flash.success && flash.success.length>0) {%>
        new Noty({
            theme: 'bootstrap-v3',
            type: "success",
            text: "<%= flash.success%>",
            timeout:2000,
            layout:"topCenter"
        }).show();
    <%}%>
    <%if (flash.info && flash.info.length>0) {%>
        new Noty({
            theme: 'bootstrap-v3',
            type: "info",
            text: "<%= flash.info%>",
            timeout: 2000,
            layout: "topCenter"
        }).show();
    <%}%>
    <%if (flash.error && flash.error.length>0) {%>
        new Noty({
            theme: 'bootstrap-v3',
            type: "error",
            text: "<%= flash.error%>",
            timeout: 2000,
            layout: "topCenter"
        }).show();
    <%}%>
</script>

</html>